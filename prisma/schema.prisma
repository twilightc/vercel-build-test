generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Uses connection pooling
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model ShortenedUrl {
  shortenedUrl String   @id
  urlCode      String   @unique
  originalUrl  String
  createDate   DateTime
  expireDate   DateTime
  userId       Int
}

model User {
  userId     Int      @id
  name       String
  email      String
  enrollTime DateTime
}
